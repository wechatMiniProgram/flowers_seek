<!--index.wxml-->
<view class="container">
    <image src="https://raw.githubusercontent.com/Hongwing/MiniApp/master/images/backGround/bg7.jpg"></image>
    <view class="input_name">
        <input auto-focus name="input_name" placeholder="请输入花名" bindblur="changeData"/>
        <view class="search_icon">
            <icon type="search" bindtap="onSearch"/>
        </view>
    </view>
    <view class="home-bottom">
        <label>常用搜索</label>
        <view wx:for="{{oftenOne}}" wx:key="name" class="oftenSearch">
            <button class="searchItem" bindtap="jumpSearch">{{item}}</button>
        </view>

         <view wx:for="{{oftenTwo}}" wx:key="name">
            <button class="searchItem" bindtap="jumpSearch">{{item}}</button>
         </view>

         <view wx:for="{{oftenThere}}" wx:key="name" class="oftenSearch">
            <button class="searchItem" bindtap="jumpSearch">{{item}}</button>
         </view>
    </view>
</view>
